bitmapcolor id BITMAP_beam_clicked "images/beam_clicked.bmp" compress
bitmapcolor id BITMAP_del "images/delete.bmp" compress
bitmapcolor id BITMAP_del_clicked "images/delete_clicked.bmp" compress
