/* help */
string id HELP_main file "help_main.txt"



/* menus */

menu id MENU_main
begin
  pulldown "Uni Chat"
  begin
    menuitem "Send" id MENUITEM_send "S"
    menuitem separator
    menuitem "men_ab" id MENUITEM_about "A"
  end
end


/* alerts */

alert id ALERT_ROMIncompatible
error
begin
  title "al_rominc1"
  message "al_rominc2"
  buttons "al_ok"
end

alert id ALERT_debug
information
begin
  title "Guru Meditation"
  message "^1^2^3"
  buttons "OK"
end

alert id ALERT_notrunning
error
begin
  title "al_notrun1"
  message "al_notrun2"
  buttons "al_ok"
end
